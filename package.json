{
  "name": "mcp-database-server",
  "version": "0.1.6",
  "description": "Node.js MCP server for runtime database connections with support for multiple database types",
  "type": "module",
  "main": "./src/server.js",
  "bin": {
    "mcp-database-server": "./bin/cli.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "database",
    "postgresql",
    "mysql",
    "sql",
    "model-context-protocol"
  ],
  "author": "Mihailo Radovic",
  "license": "MIT",
  "scripts": {
    "start": "node ./bin/cli.js",
    "test": "vitest",
    "test:setup": "docker compose -f docker-compose.test.yml up -d --wait",
    "test:teardown": "docker compose -f docker-compose.test.yml down",
    "test:integration": "vitest run",
    "test:full": "npm run test:teardown ; docker compose -f docker-compose.test.yml up -d && ./scripts/wait-for-databases.sh && vitest run && npm run test:teardown",
    "lint": "eslint src/ bin/ test/",
    "dev": "node --watch ./bin/cli.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^14.0.1",
    "mysql2": "^3.11.0",
    "pg": "^8.12.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "vitest": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mradovic95/database-mcp-server.git"
  },
  "files": [
    "bin/",
    "src/",
    "examples/",
    "README.md",
    "CLAUDE.md",
    "package.json"
  ],
  "bugs": {
    "url": "https://github.com/mradovic95/database-mcp-server/issues"
  },
  "homepage": "https://github.com/mradovic95/database-mcp-server#readme"
}
