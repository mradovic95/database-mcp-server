  "description": "Node.js MCP server for runtime database connections with support for multiple database types",
  "type": "module",
  "main": "./src/server.js",
  "bin": {
    "database-mcp-server": "./bin/cli.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "database",
    "postgresql",
    "mysql",
    "sql",
    "model-context-protocol"
  ],
  "author": "Mihailo Radovic",
  "license": "MIT",
  "scripts": {
