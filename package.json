  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "mysql2": "^3.11.0",
    "pg": "^8.12.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mihailoradovi/database-mcp-server.git"
  },
